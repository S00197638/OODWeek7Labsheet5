<Window x:Class="BandApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BandApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxBands" HorizontalAlignment="Left" Height="319" Margin="60,50,0,0" VerticalAlignment="Top" Width="300" DisplayMemberPath="Name" SelectionChanged="lbxBands_SelectionChanged"/>
        <ListBox x:Name="lbxAlbums" HorizontalAlignment="Right" Height="319" Margin="0,50,60,0" VerticalAlignment="Top" Width="300"/>

    </Grid>
</Window>
